<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".ReservationForm" tools:ignore="ExtraText">

    <ImageView
            android:layout_width="153dp"
            android:layout_height="130dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="Rezervacija"
            android:id="@+id/Reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textStyle="bold"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="175dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>

    <EditText
            android:hint="Žmonių kiekis"
            android:id="@+id/amount"
            android:layout_width="240dp"
            android:layout_height="62dp"
            android:background="#30AA8989"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Reservation" android:inputType="number"/>

    <EditText
            android:hint="Data ir laikas"
            android:id="@+id/date_time_input"
            android:inputType="textPersonName"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:background="#30AA8989"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:padding="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/amount" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp"/>
    <EditText
            android:hint="Trukmė"
            android:id="@+id/duration"
            android:inputType="textPersonName"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:background="#30AA8989"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/date_time_input"/>
    <EditText
            android:hint="Vardas"
            android:id="@+id/name"
            android:inputType="textPersonName"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:background="#30AA8989"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/duration"/>
    <EditText
            android:hint="Pavardė"
            android:id="@+id/last_name"
            android:inputType="textPersonName"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:background="#30AA8989"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp"
            app:layout_constraintTop_toBottomOf="@+id/name" android:layout_marginTop="8dp"/>
    <EditText
            android:hint="Restoranas"
            android:id="@+id/restaurant"
            android:inputType="textPersonName"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:background="#30AA8989"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp"
            app:layout_constraintTop_toBottomOf="@+id/last_name" android:layout_marginTop="8dp"/>
    <Button
            android:text="Reservate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_reservate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="136dp" tools:ignore="MissingConstraints"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/restaurant"/>

</androidx.constraintlayout.widget.ConstraintLayout>