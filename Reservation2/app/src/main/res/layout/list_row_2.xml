<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_row_selector"
                android:padding="8dp" >

    <TextView
            android:id="@+id/commentTitle"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title"
            android:textStyle="bold" tools:ignore="SpUsage"
            android:layout_marginEnd="394dp" android:layout_alignParentStart="true" android:layout_marginStart="7dp"/>
    <TextView
            android:id="@+id/commentText"
            android:layout_width="397dp"
            android:layout_height="113dp"
            android:layout_below="@id/commentTitle"
            android:layout_marginTop="27dp"
            android:textSize="@dimen/rating" tools:ignore="SpUsage"/>
    <TextView
            android:id="@+id/commentAuthor"
            android:layout_width="401dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/commentText"
            android:layout_marginTop="5dp"
            android:textColor="@color/restaurantTitle"
            android:textSize="@dimen/genre" tools:ignore="SpUsage"/>


</RelativeLayout>