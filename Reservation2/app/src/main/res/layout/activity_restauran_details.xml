<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".RestaurantDetails">

    <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="50dp"
            android:maxHeight="50dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/back"
            app:layout_constraintTop_toTopOf="parent" tools:ignore="SpeakableTextPresentCheck"
            android:background="@color/white" android:layout_marginTop="15dp" android:layout_marginEnd="15dp"/>


    <ImageView
            android:layout_width="153dp"
            android:layout_height="130dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
    />
    <ImageView
            android:layout_width="181dp"
            android:layout_height="151dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <TextView
            android:text="Pavadinimas"
            android:layout_width="163dp"
            android:layout_height="43dp" android:id="@+id/restNameField"
            android:layout_marginEnd="25dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="46dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <TextView
            android:text="Adresas"
            android:layout_width="164dp"
            android:layout_height="22dp" android:id="@+id/restAddressField"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/restNameField" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Summary"
            android:layout_width="367dp"
            android:layout_height="172dp" android:id="@+id/restSummaryField"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/restEmailField" android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Tel"
            android:layout_width="99dp"
            android:layout_height="28dp" android:id="@+id/restPhoneField"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/restAddressField" android:layout_marginEnd="89dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Email"
            android:layout_width="100dp"
            android:layout_height="32dp" android:id="@+id/restEmailField"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/restPhoneField" android:layout_marginEnd="88dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Rezervuoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/reservateB"
            android:layout_marginTop="196dp"
            app:layout_constraintTop_toBottomOf="@+id/restSummaryField" android:layout_marginEnd="144dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Rating"
            android:layout_width="164dp"
            android:layout_height="40dp" android:id="@+id/textView3"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/restSummaryField" app:layout_constraintEnd_toStartOf="@+id/rate"/>
    <Button
            android:text="Įvertinti restoraną"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rate"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/restSummaryField"/>
    <ListView
            android:layout_width="391dp"
            android:layout_height="118dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/ratesList"/>

</androidx.constraintlayout.widget.ConstraintLayout>