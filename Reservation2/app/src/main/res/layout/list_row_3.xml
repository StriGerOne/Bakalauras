<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_row_selector"
                android:padding="8dp" >

    <TextView
            android:id="@+id/restName"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title"
            android:textStyle="bold" tools:ignore="SpUsage"
            android:layout_marginEnd="394dp" android:layout_alignParentStart="true" android:layout_marginStart="0dp"/>
    <TextView
            android:id="@+id/rateDate"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title"
            android:textStyle="bold" tools:ignore="SpUsage"
            android:layout_marginTop="91dp" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_marginStart="216dp"/>
    <TextView
            android:id="@+id/commentText"
            android:layout_width="379dp"
            android:layout_height="43dp"
            android:layout_below="@id/restName"
            android:layout_marginTop="11dp"
            android:textSize="@dimen/rating" tools:ignore="SpUsage"/>
    <TextView
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/restName"
            android:layout_marginTop="-22dp"
            android:textSize="@dimen/rating" tools:ignore="SpUsage" android:layout_marginStart="278dp"
            android:id="@+id/rate" android:layout_alignParentStart="true"/>


</RelativeLayout>