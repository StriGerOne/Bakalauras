<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".UserEdit" tools:ignore="ExtraText">

    <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="50dp"
            android:maxHeight="50dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/back"
            app:layout_constraintTop_toTopOf="parent" tools:ignore="SpeakableTextPresentCheck"
            android:background="@color/white" android:layout_marginTop="15dp" android:layout_marginEnd="15dp"/>


    <ImageView
            android:layout_width="153dp"
            android:layout_height="130dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="Redaguoti informaciją"
            android:id="@+id/formName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textStyle="bold"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/imageView" android:layout_marginTop="160dp"/>
    <EditText
            android:hint="Vardas"
            android:id="@+id/editFName"
            android:inputType="textPersonName"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:background="#30AA8989"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/formName"/>
    <EditText
            android:hint="Pavardė"
            android:id="@+id/editLName"
            android:inputType="textPersonName"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:background="#30AA8989"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:padding="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editFName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp"/>
    <EditText
            android:hint="Vartotojo vardas"
            android:id="@+id/editUserName"
            android:inputType="textPersonName"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:background="#30AA8989"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:padding="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editLName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp"/>
    <EditText
            android:hint="Slaptažodis"
            android:id="@+id/editPassword"
            android:inputType="textPassword"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:background="#30AA8989"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editUserName"/>

    <EditText
            android:hint="Telefono numeris"
            android:id="@+id/editPhone"
            android:inputType="phone"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:background="#30AA8989"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:padding="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editPassword" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp"/>
    <EditText
            android:hint="El. paštas"
            android:id="@+id/editEmail"
            android:inputType="textEmailAddress"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:background="#30AA8989"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:padding="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editPhone" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp"/>

    <Button
            android:text="Išsaugoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/changeBtn"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editEmail" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="136dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>